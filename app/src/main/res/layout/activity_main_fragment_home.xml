<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/dp50">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextStyleDiscovery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp15"
                android:paddingVertical="@dimen/dp30"
                android:text="@string/home_discover" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="@dimen/dp10"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp15">

                <EditText
                    android:id="@+id/fragment_home_etSearch"
                    style="@style/EditTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/background_edit_text"
                    android:hint="@string/home_search"
                    android:paddingHorizontal="@dimen/dp5"
                    android:paddingVertical="@dimen/dp10"
                    android:textColorHint="@color/grey" />

                <ImageView
                    android:id="@+id/fragment_home_ivSearch"
                    android:layout_width="@dimen/dp35"
                    android:layout_height="@dimen/dp35"
                    android:layout_margin="@dimen/dp5"
                    android:background="@drawable/background_button"
                    android:padding="@dimen/dp7"
                    android:src="@drawable/ic_search"
                    android:tint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextStyleTypeFood"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:text="@string/home_rice" />

                <TextView
                    android:id="@+id/fragment_home_tvType0"
                    style="@style/TextStyleLoadMore"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/home_load_more" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_home_rvType0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp7" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp20"
                android:layout_marginVertical="@dimen/dp10">

                <TextView
                    style="@style/TextStyleTypeFood"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/home__noodles" />

                <TextView
                    android:id="@+id/fragment_home_tvType1"
                    style="@style/TextStyleLoadMore"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/home_load_more" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_home_rvType1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp7" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp20">

                <TextView
                    style="@style/TextStyleTypeFood"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/home_cakes" />

                <TextView
                    android:id="@+id/fragment_home_tvType2"
                    style="@style/TextStyleLoadMore"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/home_load_more" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_home_rvType2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp7" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp20">

                <TextView
                    style="@style/TextStyleTypeFood"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/home_drinks" />

                <TextView
                    android:id="@+id/fragment_home_tvType3"
                    style="@style/TextStyleLoadMore"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/home_load_more" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_home_rvType3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp7" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp20">

                <TextView
                    style="@style/TextStyleTypeFood"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/home_other_foods" />

                <TextView
                    android:id="@+id/fragment_home_tvType4"
                    style="@style/TextStyleLoadMore"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/home_load_more" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_home_rvType4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp7" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>