<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoardingActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/act_on_boarding_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/onBoarding_tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:background="@drawable/background_menu"
        android:paddingHorizontal="@dimen/dp20"
        android:paddingVertical="6dp"
        android:text="@string/on_boarding_skip"
        android:textColor="@color/brown"
        android:textSize="@dimen/dp17" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/act_on_boarding_circleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        app:ci_drawable="@drawable/bg_circle_indicator" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/act_on_boarding_btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/background_button"
        android:text="Next"
        android:textColor="@color/white" />
</RelativeLayout>