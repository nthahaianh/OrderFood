<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_light"
    tools:context=".OnBoardingActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_on_boarding_guideline1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_on_boarding_guideline2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_on_boarding_guideline3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0"
        android:layout_margin="@dimen/dp50"
        android:src="@drawable/ic_nonla1"
        app:layout_constraintBottom_toBottomOf="@id/fragment_on_boarding_guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_on_boarding_tvName"
        style="@style/TextStyleOnBoarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        app:layout_constraintBottom_toTopOf="@id/fragment_on_boarding_guideline2" />
    <TextView
        android:id="@+id/fragment_on_boarding_tvTitle"
        style="@style/TextStyleOnBoarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/dp10"
        android:text="@string/on_boarding1_title"
        app:layout_constraintTop_toTopOf="@id/fragment_on_boarding_guideline2" />

    <TextView
        android:id="@+id/fragment_on_boarding_tvAddress"
        style="@style/TextStyleOnBoarding2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp20"
        android:layout_marginVertical="@dimen/dp5"
        android:text="@string/on_boarding_address"
        app:layout_constraintTop_toBottomOf="@id/fragment_on_boarding_tvTitle" />

    <TextView
        android:id="@+id/fragment_on_boarding_tvPhone"
        style="@style/TextStyleOnBoarding2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp20"
        android:layout_marginVertical="@dimen/dp5"
        android:text="@string/on_boarding_phone"
        app:layout_constraintTop_toBottomOf="@id/fragment_on_boarding_tvAddress" />
</androidx.constraintlayout.widget.ConstraintLayout>