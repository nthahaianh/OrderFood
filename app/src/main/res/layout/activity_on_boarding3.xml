<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_light"
    tools:context=".OnBoardingActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_on_boarding3_guideline1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_on_boarding3_guideline2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_on_boarding3_guideline3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0"
        android:layout_margin="@dimen/dp50"
        android:src="@drawable/credit_card1"
        app:layout_constraintBottom_toBottomOf="@id/fragment_on_boarding3_guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp100"
        android:layout_marginTop="@dimen/dp100"
        android:src="@drawable/pay"
        app:layout_constraintLeft_toLeftOf="@id/fragment_on_boarding3_guideline3"
        app:layout_constraintTop_toTopOf="@id/fragment_on_boarding3_guideline1" />

    <ImageView
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp100"
        android:layout_marginVertical="@dimen/dp20"
        android:layout_marginRight="@dimen/dp100"
        android:src="@drawable/ic_caphe"
        app:layout_constraintBottom_toTopOf="@id/fragment_on_boarding3_guideline2"
        app:layout_constraintRight_toLeftOf="@id/fragment_on_boarding3_guideline3" />

    <ImageView
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp100"
        app:layout_constraintHorizontal_bias="0.7"
        android:src="@drawable/ic_banhmi"
        app:layout_constraintBottom_toTopOf="@id/fragment_on_boarding3_guideline1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/fragment_on_boarding3_guideline3"
        app:layout_constraintRight_toRightOf="@id/fragment_on_boarding3_guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_on_boarding3_tvPayment"
        style="@style/TextStyleOnBoarding2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp20"
        android:layout_marginTop="@dimen/dp15"
        android:text="Pay ment method: Direct and online"
        app:layout_constraintTop_toBottomOf="@id/fragment_on_boarding3_guideline2" />

    <TextView
        android:id="@+id/fragment_on_boarding3_tvDelivery"
        style="@style/TextStyleOnBoarding2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp20"
        android:layout_marginVertical="@dimen/dp5"
        android:text="Delivery: At restaurant or your home"
        app:layout_constraintTop_toBottomOf="@id/fragment_on_boarding3_tvPayment" />
</androidx.constraintlayout.widget.ConstraintLayout>