<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp5"
    android:paddingVertical="@dimen/dp10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_check_password_ivBack"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_marginStart="@dimen/dp15"
            android:padding="@dimen/dp4"
            android:src="@drawable/ic_back"
            android:tint="@color/black" />

        <TextView
            style="@style/TextStylePersonal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="20dp"
            android:text="Check password" />
    </LinearLayout>

    <TextView
        style="@style/TextStylePersonalChangePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp8"
        android:layout_marginVertical="@dimen/dp7"
        android:text="@string/sign_in_password" />

    <EditText
        android:id="@+id/fragment_check_password_etPassword"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp8"
        android:inputType="textPassword"
        android:layout_marginVertical="@dimen/dp7"
        android:background="@drawable/background_edit_text"
        android:padding="@dimen/dp7" />

    <TextView
        android:id="@+id/fragment_check_password_tvNotification"
        style="@style/TextStyleNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check password again"
        android:visibility="gone"
        android:layout_margin="@dimen/dp3"
        android:gravity="center" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_check_password_btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/background_button"
        android:text="@string/order_confirm" />
</LinearLayout>