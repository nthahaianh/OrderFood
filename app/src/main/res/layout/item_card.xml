<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dp1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_card"
        android:layout_margin="@dimen/dp10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_card_tvNumberCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextStyleItemCardNumber"
            android:padding="@dimen/dp10"
            android:layout_marginTop="@dimen/dp90"
            android:text="so the" />

        <TextView
            android:id="@+id/item_card_tvNameUser"
            android:layout_width="match_parent"
            style="@style/TextStyleItemCardName"
            android:padding="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp20"
            android:text="full name"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        style="@style/TextStyleItemCardName"
        android:id="@+id/item_card_tvNameBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp20"
        android:layout_marginHorizontal="@dimen/dp20"
        android:text="name bank" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/item_card_btnRemove"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginHorizontal="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp20"
        android:paddingHorizontal="@dimen/dp20"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:text="Remove card" />
</LinearLayout>