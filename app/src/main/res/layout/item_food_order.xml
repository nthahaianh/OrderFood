<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_food_order_ivImage"
        android:layout_width="@dimen/dp90"
        android:layout_height="@dimen/dp90"
        android:layout_margin="@dimen/dp5"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="@dimen/dp10"
        android:paddingVertical="@dimen/dp5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_food_order_tvNameOfFood"
            style="@style/TextStyleNameFoodOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phowr bof" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_food_order_tvPrice"
                style="@style/TextStyleItemFoodOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20000" />

            <TextView
                style="@style/TextStyleItemFoodOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp3"
                android:text="x" />

            <TextView
                android:id="@+id/item_food_order_tvQuantity"
                style="@style/TextStyleItemFoodOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />
        </LinearLayout>
        <TextView
            android:id="@+id/item_food_order_tvRate"
            style="@style/TextStyleItemFoodOrderRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp6"
            android:layout_gravity="right"/>
    </LinearLayout>
</LinearLayout>