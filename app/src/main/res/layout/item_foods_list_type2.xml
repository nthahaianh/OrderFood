<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp2"
    android:background="@drawable/background_item2"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp3"
        app:cardCornerRadius="@dimen/dp5">

        <ImageView
            android:id="@+id/item_foods_list_type2_ivImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_foods_list_type2_tvNameOfFood"
        style="@style/TextStyleNameFoodItem2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp7"
        android:layout_marginHorizontal="@dimen/dp5"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/item_foods_list_type2_tvPrice"
        style="@style/TextStylePriceItem2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp15"
        android:layout_marginHorizontal="@dimen/dp5"
        android:textColor="@color/black" />
</LinearLayout>